@model IEnumerable<Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>

<p>
    <a asp-action="CrearLibro" class="btn btn-default">Crear Libro</a>
    <a asp-action="CrearCliente" class="btn btn-default">Crear Cliente</a>
    <a asp-action="CrearAlquiler" class="btn btn-primary">Alquilar</a>
    <a asp-action="CrearDevolucion" class="btn btn-secondary">Devolver</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
            </tr>
        }
    </tbody>
</table>
